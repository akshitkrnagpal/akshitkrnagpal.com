---
import { Picture } from "@astrojs/image/components";
import image from "@images/image.jpeg";
import BaseLayout from "@layouts/base.astro";
import { SocialIcon } from "react-social-icons";
---

<BaseLayout>
  <main class="flex h-full items-center justify-center font-raleway">
    <div class="flex max-w-3xl flex-col-reverse gap-4 md:flex-row">
      <div class="flex-1 space-y-4 px-8 text-center md:text-left">
        <div class="flex flex-col justify-center">
          <h2 class="text-2xl tracking-wide text-slate-600 sm:text-3xl">
            Hey there!
          </h2>
          <p class="mt-4 text-sm leading-relaxed tracking-wide sm:text-base">
            My name is <span class="font-bold">Akshit Kr Nagpal</span> and I've been
            a self-taught Software Engineer for about a decade now. I started building
            websites when I was just <span class="italic">14</span> and I've always
            been really passionate about full-stack development. I'm known for my
            ability to deliver high-quality code at a fast pace and I'm also an open
            source hobbyist. If you're looking for someone who is driven, skilled,
            and always looking to learn and improve,
            <span class="italic">I'm your guy!</span>
          </p>
        </div>
        <div class="space-x-4">
          <SocialIcon
            bgColor="transparent"
            fgColor="black"
            target="_blank"
            url="https://www.linkedin.com/in/akshitkrnagpal"
          />
          <SocialIcon
            bgColor="transparent"
            fgColor="black"
            target="_blank"
            url="https://www.github.com/akshitkrnagpal"
          />
          <SocialIcon
            bgColor="transparent"
            fgColor="black"
            target="_blank"
            url="https://www.twitter.com/akshitkrnagpal"
          />
        </div>
      </div>
      <div class="flex-1 px-8">
        <figure class="flex flex-col">
          <Picture
            class="aspect-square overflow-hidden rounded-full object-cover md:aspect-auto md:rounded-md"
            src={image}
            widths={[312]}
            formats={["webp", "avif", "jpg"]}
            width={840}
            height={936}
            aspectRatio="840:936"
            alt="Akshit Kr Nagpal"
            loading="eager"
          />
          <figcaption
            class="hidden py-1 text-center text-sm text-slate-500 md:block"
          >
            Akshit Kr Nagpal
          </figcaption>
        </figure>
      </div>
    </div>
  </main>
</BaseLayout>
