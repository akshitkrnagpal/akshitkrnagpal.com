---
import "@fontsource/raleway/100.css";
import "@fontsource/raleway/500.css";
import "@styles/globals.css";
import { SEO } from "astro-seo";
import { getImage } from "@astrojs/image";
import image from "@images/image.webp";

const title = "Akshit Kr Nagpal | Software Engineer";
const description =
  "A self-taught Software Engineer who started building websites at the age of 14 (nearly a decade ago). With a passion for full-stack development and a history of delivering high-quality code at high velocity. Open source hobbyist.";
const url = "https://www.akshitkrnagpal.com";
const twitterHandle = "@akshitkrnagpal";
const { src } = await getImage({ src: image, aspectRatio: 1.91 / 1 });
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      canonical={url}
      title={title}
      description={description}
      openGraph={{
        basic: {
          type: "website",
          title,
          url,
          image: `${url}${src}`,
        },
      }}
      extend={{
        meta: [
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
          { name: "twitter:image", content: `${url}${src}` },
          { name: "twitter:image:alt", content: title },
          { name: "twitter:card", content: "summary_large_image" },
          { name: "twitter:site", content: twitterHandle },
          { name: "twitter:creator", content: twitterHandle },
        ],
      }}
    />
    <script
      id="cookieyes"
      type="text/partytown"
      src="https://cdn-cookieyes.com/client_data/04a83b25bb08eac7da8048df/script.js"
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>
